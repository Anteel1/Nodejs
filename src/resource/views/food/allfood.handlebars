<div class="container ">
    <table class="table">
        <label style="color: black;font-size: larger; font-weight: 400;">
            Food
        </label>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Inventory</th>
                <th scope="col">Category</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each Food}}
            <tr>
                <th scope="rows">{{@index}}</th>
                <td>{{this.name}}</td>
                <td><img style="width: 50px;height: 50px" src={{this.img}} /></td>
                <td>{{this.inventory }}</td>
                <td>{{category.[0].name}}</td>
                <td><a style="text-decoration: none;" href="/food/{{this._id}}"><button type="submit"
                            class="btn btn-dark">Edit</button>
                    </a>
                    <a style="text-decoration: none;" href="" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#exampleModal"><button type="submit"
                            class="btn btn-danger" id="btnDelete">Delete</button>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

