<h1>Edit Food</h1>
<nav class="navbar bg- rgba(73, 73, 73, 0.993)">
  <form action="/food/{{Food._id}}" method="post" class="container-colum">
    <div class="d-flex m-3">
      <input style="margin: 10;" type="text" class="form-control" placeholder="Name" aria-label="Name"
        aria-describedby="basic-addon1" name="name" value="{{Food.name}}" />
    </div>
    <div class="d-flex m-3">
      <input style="margin: 10;" type="text" class="form-control" placeholder="description" aria-label="description"
        aria-describedby="basic-addon1" name="description" value="{{Food.description}}" />
    </div>
    <div class="d-flex m-3">
      <select class="form-select" name="idCategory" id="category">
        <optgroup>
          <option selected="true" disabled="true" hidden="true">Choose option</option>
          <option value="641033f8399ccfdb5c5c8493">Fruits</option>
          <option value="641035de399ccfdb5c5c8494">Vegtables</option>
          <option value="64219468f6ae4300025848cd"> Meat</option>
          <option value="64219489f6ae4300025848d0">Fish</option>
          <option value="6421949cf6ae4300025848d2">Cake</option>
          <option value="642195a7f6ae4300025848da">Ice cream</option>
          <option value="642195e3f6ae4300025848dd">Juice</option>
        </optgroup>
      </select>
    </div>
    <div class="d-flex m-3">
      <img width="50" height="50" src={{Food.img}} />
      <input style="margin: 10;" type="text" class="form-control" placeholder="img" aria-label="img"
        aria-describedby="basic-addon1" name="img" value="{{Food.img}}" />
    </div>
    <div class="d-flex m-3">
      <input style="margin: 10;" type="text" class="form-control" placeholder="cost" aria-label="cost"
        aria-describedby="basic-addon1" name="cost" value="{{Food.cost}}" />
    </div>
    <div class="d-flex m-3">
      <input style="margin: 10;" type="text" class="form-control" placeholder="inventory" aria-label="inventory"
        aria-describedby="basic-addon1" name="inventory" value="{{Food.inventory}}" />
    </div>
    <div style="margin: 10;" class="d-grid gap-2">
      <button class="btn btn-primary" type="submit">Edit</button>
    </div>
  </form>
</nav>